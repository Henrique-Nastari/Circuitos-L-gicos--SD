-- Biblioteca IEEE necessária para tipos de dados padrão
library IEEE;
use IEEE.STD_LOGIC_1164.ALL;

-- Entidade para a porta XOR
entity ExA is
    port (
        A: in STD_LOGIC;
        B: in STD_LOGIC;
        Y: out STD_LOGIC
    );
end ExA;

-- Arquitetura da porta XOR
architecture ComportamentoDaPortaXor of ExA is
begin
    Y <= A xor B;  -- Operação XOR entre A e B
end ComportamentoDaPortaXor;
